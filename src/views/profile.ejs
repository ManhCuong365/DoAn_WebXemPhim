<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" type="text/css" href="/css/homepage.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/swiper@11/swiper-bundle.min.css" />
    <script src="https://cdn.jsdelivr.net/npm/swiper@11/swiper-bundle.min.js"></script>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/@tabler/icons-webfont@latest/tabler-icons.min.css">
    <title>MovieZone homepage</title>
</head>

<body>
    <header class="head">
        <div class="container">
            <div class="row">
                <div style="max-width: 1205px;" class="header_content">
                    <a href="/" class="header_logo">
                        <span>MOVIE</span>ZONE
                    </a>
                    <ul class="header_nav">
                        <li class="header_nav_item">
                            Home
                            <i class="ti ti-chevron-down"></i>
                        </li>

                        <li class="header_nav_item">
                            <a style="text-decoration: none; color:#ffffff;" class="link_catalog>"
                                href="/all_movies">Catalog</a>
                            <i class="ti ti-chevron-down"></i>
                        </li>

                        <li class="header_nav_item">Contacts</li>

                        <li class="header_nav_item has-dropdown">
                            Pages
                            <i class="ti ti-chevron-down"></i>
                            <ul class="dropdown-menu">
                                <li><a href="#">About Us</a></li>
                                <li><a href="profile.html">Profile</a></li>
                                <li><a href="#">Actor</a></li>
                                <li><a href="#">Contacts</a></li>
                                <li><a href="#">Help center</a></li>
                                <li><a href="#">Privacy policy</a></li>
                                <li><a href="/dashboard">Admin pages</a></li>
                            </ul>
                        </li>

                        <li class="header_nav_item has-dropdown">
                            <a class="button_dot">
                                <i class="ti ti-dots"></i>
                            </a>
                            <ul class="dropdown-menu">
                                <li><a href="/login_page">Sign in</a></li>
                                <li><a href="/crud">Sign up</a></li>
                            </ul>
                        </li>
                    </ul>

                    <div class="header_right">
                        <div class="header_search_era">
                            <input class="header_search-right" type="text" placeholder="Search...">
                            <button class="header_button-right" type="button">
                                <i class="ti ti-search"></i>
                            </button>
                        </div>

                        <div class="header_lang">
                            <a class="header_lang_link">

                            </a>
                            <ul class="drop_menu_lang">

                            </ul>
                        </div>

                        <div class="header_right_profile header_profile has-dropdown"
                            style="position: relative; display: inline-block;">
                            <a href="<%= user ? 'javascript:void(0)' : '/login_page' %>" class="header_right_sighin"
                                id="profileDropdownBtn">
                                <span style="text-overflow: ellipsis; white-space: nowarp; overflow: hidden;">
                                    <%= user ? user.username : 'Nickname' %>
                                </span>
                                <% if (user) { %>
                                    <i class="ti ti-chevron-down"></i>
                                    <% } %>
                            </a>
                            <% if (user) { %>
                                <ul class="dropdown_menu">
                                    <li><a href='#'>PROFILE </a></li>
                                    <li><a href="/logout">LOGOUT</a></li>
                                </ul>
                                <% } %>
                        </div>

                    </div>
                </div>
            </div>
        </div>
    </header>
</body>